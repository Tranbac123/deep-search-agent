# ============================================================
# OpenAI / LLM Configuration
# ============================================================
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=4096   # optional override

# ============================================================
# Firecrawl Configuration
# ============================================================
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ============================================================
# Search Provider Keys (Optional)
# ============================================================
TAVILY_API_KEY=your_tavily_api_key_here
BRAVE_API_KEY=your_brave_api_key_here

# ============================================================
# Embeddings / RAG
# ============================================================
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
# EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=16
RAG_TOP_K=6
VECTOR_SIMILARITY_THRESHOLD=0.35
VECTOR_STORE_DIR=.vector_store

# ============================================================
# Workflow Parameters
# ============================================================
MAX_TOOLS_PER_QUERY=5
MAX_CONTENT_LENGTH=2000
FIRECRAWL_TIMEOUT=15000
FIRECRAWL_MAX_RESULTS=10

# ============================================================
# Rate Limiting (Core System)
# ============================================================
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=5

# ============================================================
# Caching
# ============================================================
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
# REDIS_URL=redis://localhost:6379/0

# ============================================================
# Logging / Monitoring
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
PROMETHEUS_PORT=8000

# ============================================================
# Database (Optional)
# ============================================================
# DATABASE_URL=postgres://user:password@host:5432/dbname

# ============================================================
# Deep Search Agent Configuration
# ============================================================
DEEPSEARCH_LLM_PROVIDER=local   # options: "openai" | "local"
DEEPSEARCH_OFFLINE=true         # true = local mode (no OpenAI)

# If using OpenAI provider:
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE=0.2

# ============================================================
# Deep Search Retrieval
# ============================================================
WEB_MAX_RESULTS=5
DEEPSEARCH_RAG_TOP_K=3

# ============================================================
# Deep Search Performance / Infra
# ============================================================
ENABLE_AGENT_CACHE=true
CACHE_TTL_SECONDS=600
RATE_LIMIT_PER_MINUTE=30
DEEPSEARCH_USER_AGENT=DeepSearchAgent/1.0
CRAWLER_TIMEOUT=10.0
